            <string>///If the player fights the shop

if(global.shopMode == false){
    with(obj_FightOption){
        instance_destroy();
    }
    instance_destroy();
}
else{
    left_c = mouse_check_button_released(mb_left);
    if(position_meeting(mouse_x,mouse_y,obj_FightOption)){
         effect_create_above(ef_ellipse,obj_FightOption.x,obj_FightOption.y,0.3,c_red);
         if(left_c == 1){
            script_execute(scr_FightShop,obj_Shop,obj_Player);
            with(obj_FightOption){
                instance_destroy();
            }
            global.shopMode = false;
         }
    }
