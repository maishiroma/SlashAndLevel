if(global.shopMode == true){
    var width = room_width/2;
    var height = (room_height/2);
    var height2 = 80;
    
    draw_self();
    draw_text(width - 80, 10, "Welcome to the Shop!");
    draw_text(85,35,"Left click shop items to buy them or left click your items to sell!")
    draw_text(width - 80, height - 40, "Your Inventory");
    draw_text(width+ 90, height - 40, "Wallet: $" + string(obj_Player.currMoney));
    //Draws the shop inv
    for(i = 0; i &lt; 3; i += 1){
        draw_text(30,height2+(30*i),obj_Shop.shopInv[i,0]);   //Draws name of item
        draw_text(width - 170,height2+(30*i),obj_Shop.shopInv[i,1]);  //Draws description
